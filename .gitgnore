//5.ACCEPT NUMBER FROM USER AND CHECK WHETHER NUMBER IS EVEN OR ODD
# include<stdio.h>
#define TRUE 1
#define FALSE 0

typedef int BOOL ;
BOOL ChkEven(int iNo)
{
    if((iNo % 2)==0)
    {
        return TRUE;
    }
    else
    {
    return FALSE;
    }
}



int main()
{
    int iValue = 0;
    BOOL bRet = FALSE;
    printf("ENTER NUMBER");

    scanf("%d",&iValue);
    bRet = ChkEven(iValue);

    if(bRet == TRUE)
    {
        printf("%d number is even",iValue);

    }
    else
    {
        printf("%d number is odd",iValue);
    }

